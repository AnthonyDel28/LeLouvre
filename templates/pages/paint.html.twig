{% extends 'base.html.twig' %}
{% block body %}
<div class="container-fluid back-paint">
    <div class="container paint pb-5">
        <div class="row text-center">
            <h1>{{ painting.title }}</h1>
            <hr>
        </div>
        <div class="row">
            <div class="card col-12 col-md-6">
                <img class="card-img-top" src="{{ asset('img/paints/' ~ painting.image) }}" alt="">
            </div>
            <div class="description col-12 col-md-6 align-middle">
                <p>{{ painting.description }}</p>
                <p><b>Auteur:</b> {{ painting.author }}</p>
                <p><b>Date:</b> {{ painting.date }}</p>
                <p><b>Dimensions originales:</b> {{ painting.height }} x {{ painting.width }}</p>
            </div>
        </div>
    </div>
    <div class="container comment">
        <div class="row">
            <h1>Commentaires</h1>
            <hr>
            <main class="container ">
                <div class="row justify-content-between">
                    <div class="comments m-2 col-12 col-md-6 text-center">
                        <h4 class="mt-3">Commentaires</h4>
                        <hr>
                        {% if comments|length >= 1 %}
                        {% for comment in comments  %}
                            <i>"{{ comment.content }}"</i>
                            <p class="comment-author">{{ comment.author }}  ({{ comment.date|date('d-m-Y h:i')}})
                            </p><hr>
                        {% endfor %}
                        {% else %}
                            <p>Aucun commentaire pour le moment!</p>
                        {% endif %}
                    </div>
                    <div class="form-group shadow-textarea col-12 col-md-4 m-2">
                        <h2 class="display-6 my-3">Ajouter un commentaire</h2>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-light">Confirmer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </main>
        </div>
</div>

{% endblock %}