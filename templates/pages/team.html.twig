{% extends 'base.html.twig' %}
{% block title %}Gouvernance - Le Louvre {% endblock %}
{% block body %}
    <div class="container gallery">
        <div class="row text-center mt-5">
            <h1>Gouvernance</h1>
            <hr>
        </div>
        <div class="container team">
            <div class="row">
                {% for member in members %}
                    <div class="card col-6 col-md-4 col-lg-3 col-sm-6 team">
                        <img class="card-img-top" src="{{ asset('img/team/'  ~ member.image) }}" alt="Card image cap">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ member.fullname }}</h5>
                            <p class="card-text">{{ member.job }}</p>
                        </div>
                        <div class="card-body text-center">
                            <a href="#" class="card-link"><i class="icofont-instagram"></i></a>
                            <a href="#" class="card-link"><i class="icofont-linkedin"></i></a>
                            <a href="#" class="card-link"><i class="icofont-pinterest"></i></i></a>
                            <a href="#" class="card-link"><i class="icofont-rss"></i></a>
                            <a href="#" class="card-link"><i class="icofont-blogger"></i></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}